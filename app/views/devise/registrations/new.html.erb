<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name).:ajax=>false) do |f| %>
  <%= devise_error_messages! %>
  <div><%= f.label :name %><br />
  <%= f.text_field :name, :autofocus => true %></div>

  <div><%= f.label :initials %><br />
  <%= f.text_field :initials, :autofocus => true %></div>

	<% if current_user.role?(:superadmin)%>
	
	<div><%= f.label :role %><br />
	<%= f.select :role, %w[manager doctor] %></div>
	<% else %>
	<%= hidden_field_tag 'user[role]', 'doctor'  %>
	<% end %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
