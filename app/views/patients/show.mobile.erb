
<div data-role="page" data-theme="a" id='showpatient' > 
     <div data-role="header">
	 <%= link_to 'Back', round_path(@round),'data-ajax'=>'false' if @round %>
           <h1><%= @patient.name%></h1>
     </div> 
     <div data-role="content">
			<div data-role="fieldcontain">
			  <label><b>MRN:  </b></label>
			  <%= best_in_place @patient, :mrn %>
				<p>
					  <b>Admission:</b>
					  <%= best_in_place @patient, :admission, :type => :date %>
					</p>
					<div id="discharge-<%=@patient.id%>" <%="style='display: none'" unless @patient.discharge%> >
					<p>
					  <b>Discharge:</b>
						<span id='picker-discharge-<%=@patient.id%>>'>
					  <%= best_in_place @patient, :discharge, :type => :date %>
						<div id='undischarge_button'<%="style='display: none'" unless @patient.discharge%> >
						 <button id='undischarge' data-mini='true' data-patient='<%=@patient.id%>'>UnDischarge</button>
						</div>
						</span>

					</div> 
					<div id='discharge_button' <%="style='display: none'" if @patient.discharge%>>
					<button id='discharge' data-mini='true' data-patient='<%=@patient.id%>'>Discharge</button>
					</div>    
	     </div>
				<div data-role="fieldcontain">
				    <fieldset data-role="controlgroup" data-type="horizontal" data-mini="true">
				    <legend>Status:</legend>
				<%= radio_button "patient","status","0",{'class'=>'status','data-patient'=>@patient.id} %>
				<label for="patient_status_0">--</label>
				<%= radio_button "patient","status", "1",{'class'=>'status','data-patient'=>@patient.id} %>
				<label for="patient_status_1">Pub</label>
				<%= radio_button "patient","status", "2",{'class'=>'status','data-patient'=>@patient.id} %>
				<label for="patient_status_2">Pte</label>
				<%= radio_button "patient","status", "3" ,{'class'=>'status','data-patient'=>@patient.id}%>
				<label for="patient_status_3">DVA</label>
				<%= radio_button "patient","status", "4" ,{'class'=>'status','data-patient'=>@patient.id}%>
				<label for="patient_status_4">WC</label>
				    </fieldset>
				</div>
				<div data-role="fieldcontain">
				<label for="patient_under">Under Us:</label>
				<%= select(:patient, :under, [["no",0],["yes",1]],{},{"data-role"=>"slider","data-mini"=>"true","class"=>"patient-under","data-patient"=>@patient.id}) %>
				</div>

			<p>
	

			<div data-role="fieldcontain">
      <label for="patient_ward_id">Ward:</label>
				<%= select(:patient, :ward_id,@patient.ward.hospital.wards.map {|x| [x.name, x.id] },{},{"data-native-menu"=>"false","data-mini"=>"true","data-patient"=>@patient.id}) %> 

			</div>


			<p>
				<b>Reason:</b>
			  <%= best_in_place @patient, :reason, :type => :input,:ok_button => 'Save', :cancel_button => 'Cancel' %> 	 
			</p>
			<p>
				<b>Note:</b>
			  <%= best_in_place @patient, :note, :type => :textarea,:ok_button => 'Save', :cancel_button => 'Cancel' %> 	 
			</p>


	
     
     </div>   
    <div data-role="footer" data-position="fixed">
	
     <h4>WardRoundApp by LemLink</h4>
    </div> 
</div>





