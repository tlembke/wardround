<h1>Listing wards</h1>

<table>
  <tr>
    <th>Hospital</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @wards.each do |ward| %>
  <tr>
    <td><%= ward.hospital_id %></td>
    <td><%= ward.name %></td>
    <td><%= link_to 'Show', ward %></td>
    <td><%= link_to 'Edit', edit_ward_path(ward) %></td>
    <td><%= link_to 'Destroy', ward, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

